{# Matrix Page Content
{# =============================================================== #}
{#
  {% include '_partials/matrix-page-content' with {
    field: 'pageContent',
    debug: false
  } %}
#}

{% set field = field ?? 'pageContent' %}

{% set element = element ?? entry %}

{% if element %}
  {% set blocks = element[field] ??? null %}
  {% if blocks %}
    {% for block in blocks.all() %}
      {% include '_partials/block' with {
        handle: block.type.handle,
        block: block,
        debug: debug ?? false,
      } %}
    {% endfor %}
  {% endif %}
{% endif %}
