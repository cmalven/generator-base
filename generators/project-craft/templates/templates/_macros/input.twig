{# ------------------------------------------------------------------ #}
{# Input: Text
{# ------------------------------------------------------------------ #}
{#
{% import '_macros/input' as input %}
{{ input.text({
  name: 'email',
  label: 'Email',
  value: '',
  type: 'text',
  placeholder: 'someone@gmail.com',
  autocomplete: false,
  errors: ['Some error message'],
  disabled: false,
  required: false,
}) }}

Renders a text input. See `_macros/bits.twig` for additional options.
#}

{%- macro text(options = {}) -%}
  {% import '_macros/bits' as bits %}

  {% set defaults = {
    mainClass: 'input-text',
  } %}
  {% set options = defaults | merge(options) %}
  {{ bits.text(options) }}
{%- endmacro -%}


