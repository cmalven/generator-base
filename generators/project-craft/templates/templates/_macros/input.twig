{# Input: Checkbox
{# ------------------------------------------------------------------ #}
{#
{% import '_macros/input' as input %}
{{ input.checkbox({
    value: 'foo',
    name: 'options',
    label: 'Options',
    required: false,
    items: [
      {
        label: 'Foo',
        value: 'foo',
      }
    ],
}) }}

Renders a checkbox input. See `_macros/bits.twig` for additional options.
#}

{%- macro checkbox(options = {}) -%}
  {% import '_macros/bits' as bits %}

  {% set unselectedSvg %}

  {% endset %}

  {% set selectedSvg %}
    {% import '_macros/svg' as svg %}
    {{ svg.use('checkbox-selected') }}
  {% endset %}

  {% set defaults = {
    mainClass: 'input-selectable',
    classes: 'input-selectable--checkbox',
    type: 'checkbox',
    unselectedSvg: unselectedSvg ??? null,
    selectedSvg: selectedSvg ??? null,
  } %}
  {% set options = defaults | merge(options) %}
  {{ bits.selectable(options) }}
{%- endmacro -%}


