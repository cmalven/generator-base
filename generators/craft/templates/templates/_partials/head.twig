{# Favicons #}
<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
<link rel="icon" type="image/png" href="/favicons/favicon-32x32.png" sizes="32x32">
<link rel="icon" type="image/png" href="/favicons/favicon-16x16.png" sizes="16x16">
<link rel="manifest" href="/favicons/manifest.json">
<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#b08b74">
<link rel="shortcut icon" href="/favicons/favicon.ico">
<meta name="msapplication-config" content="/favicons/browserconfig.xml">
<meta name="theme-color" content="#b08b74">

{# Main stylesheet #}
<link rel="stylesheet" href="{{ rev('styles/main.css') }}">

{# SEO #}
{% hook 'seomaticRender' %}

{# Add styling hook class to <html> if javascript enabled and not in a live preview #}
{% set isLivePreview = craft.app.request.isLivePreview ? 'true' : 'false' %}
<script>
  if (!{{ isLivePreview }}) {
    var root = document.getElementsByTagName('html')[0];
    root.className += 'js';
  };
</script>

{# Lazy Sizes #}
<script>
  window.lazySizesConfig = {
    addClasses: true,
    expand: 1000,
    lazyClass: 'lazyload',
    loadingClass: 'is-loading',
    loadedClass: 'is-loaded',
    customMedia: {
      '--small': '(max-width: 768px)'
    }
  };
</script>
